@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<div class="row" >
    <div class="col-md-10 col-md-offset-1" style="text-align:center;">
       
      <h2>This is a project to study ASP.NET MVC 4 and Entity Framework 6!</h2>
      <h2>Feel free to register and make some awesome courses or apply to some interesting class!</h2>
      <p >
      
            <a class="btn btn-default btn-lg" role="button">View code at GitHub</a>
      </p>
        
    </div>
</div>


<h2>Latest Courses</h2>
<div class="row">
@for (int i = 0; i < ViewBag.CourseList.Count; i++)
{
    <div class="widget col-md-3">
        <a href="#">
            <div class="img" style="background-image:url('http://www.infoescola.com/wp-content/uploads/2011/08/amy-winehouse.jpg');" ></div>
        </a>
        <div>
            <h4>Media heading <span class="badge">@ViewBag.CourseList[i].Created.ToShortDateString()</span></h4> 
            TESTE
        </div>
    </div>
}
</div>





